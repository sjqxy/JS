<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.MybatisMapper">
<select id="selectAll" resultType="com.itheima.domain.User">
    select *
from tb_user;
</select>
    <select id="selectByid" resultType="com.itheima.domain.User">
        select * from tb_user
       where id=#{id}
    </select>
    <select id="selectBye" resultType="com.itheima.domain.User">
        select *
from tb_user
where username=#{{username}
and
    password=#{{param2}
    </select>
    <select id="select" resultType="com.itheima.domain.User">
        select *
        from tb_user
        where
            username=#{username}
          and password=#{password}

    </select>
</mapper>